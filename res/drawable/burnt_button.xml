<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#CC5500" />
      <stroke
          android:width="1dp"
          android:color="#CC5500" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="10dp"
          android:top="5dp"
          android:right="10dp"
          android:bottom="8dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#CC5500"
          android:endColor="#993300"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#CC5500" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="10dp"
          android:top="5dp"
          android:right="10dp"
          android:bottom="8dp" />
    </shape>
  </item>
</selector>